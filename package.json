{
  "name": "natures-whispers-blog",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "node -r dotenv/config node_modules/.bin/next dev",
    "build": "node -r dotenv/config node_modules/.bin/next build && npm run analyze",
    "postbuild": "node -r dotenv/config node_modules/.bin/next-sitemap",
    "start": "next start",
    "lint": "next lint",
    "sitemap": "node -r dotenv/config node_modules/.bin/next-sitemap",
    "test:sitemap": "curl http://localhost:3000/sitemap.xml",
    "test:robots": "curl http://localhost:3000/robots.txt",
    "test:rss": "curl http://localhost:3000/api/rss",
    "analyze": "cross-env ANALYZE=true next build",
    "lighthouse": "lighthouse http://localhost:3000 --output=json --output=html --output-path=./lighthouse-report --chrome-flags=\"--headless\""
  },
  "dependencies": {
    "@headlessui/react": "^2.2.4",
    "@heroicons/react": "^2.1.1",
    "@tailwindcss/typography": "^0.5.10",
    "@web3forms/react": "^1.1.3",
    "clsx": "^2.1.0",
    "critters": "^0.0.23",
    "date-fns": "^3.3.1",
    "leancloud-storage": "^4.15.2",
    "marked": "^16.0.0",
    "next": "^14.1.0",
    "next-sitemap": "^4.2.3",
    "next-themes": "^0.2.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.49.3",
    "typescript": "^5.3.3",
    "valine": "^1.5.3",
    "web-vitals": "^5.0.3"
  },
  "devDependencies": {
    "@types/node": "24.0.12",
    "@types/react": "19.1.8",
    "autoprefixer": "^10.4.17",
    "cross-env": "^7.0.3",
    "dotenv": "^17.2.0",
    "eslint": "^8.56.0",
    "eslint-config-next": "^14.1.0",
    "lighthouse": "^12.8.0",
    "postcss": "^8.4.33",
    "prettier": "^3.2.4",
    "tailwindcss": "^3.4.1"
  }
}
